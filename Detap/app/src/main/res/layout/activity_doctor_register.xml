<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:id="@+id/DRegister"
    android:orientation="horizontal"
    tools:context=".DoctorRegister">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:inputType="text"
        android:text="Register"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/D_Name"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:cursorVisible="true"
        android:ems="15"
        android:hint="Full Name"
        android:gravity="center"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:textColor="#0C0E0E"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <EditText
        android:id="@+id/D_Email"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:background="@drawable/border"
        android:gravity="center"
        android:ems="15"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Name" />

    <EditText
        android:id="@+id/D_Department"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:background="@drawable/border"
        android:ems="15"
        android:inputType="text"
        android:gravity="center"
        android:hint="Department Name"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Email"
        app:layout_constraintVertical_bias="0.016" />

    <EditText
        android:id="@+id/D_Chamber"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Chamber Number"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Department"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/D_Number"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:hint="Phone Number"
        android:background="@drawable/border"
        android:gravity="center"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Chamber"
        app:layout_constraintVertical_bias="0.011" />

    <EditText
        android:id="@+id/D_id"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:ems="15"
        android:hint="Doctor Id"
        android:gravity="center"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Number"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/D_Password"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:background="@drawable/border"
        android:hint="Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_id"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/D_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:onClick="Click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Password"
        app:layout_constraintVertical_bias="0.139" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        tools:layout_editor_absoluteX="-162dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="570dp"
            android:text="Already have account "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_Register"
            app:layout_constraintVertical_bias="0.315"
            android:layout_marginLeft="110dp" />
        <TextView
            android:id="@id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="570dp"
            android:text="Login "
            android:onClick="Click"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/D_Register"
            app:layout_constraintVertical_bias="0.315"
            android:layout_marginLeft="0dp" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D_Register"
        app:layout_constraintVertical_bias="0.26" />


</androidx.constraintlayout.widget.ConstraintLayout>