<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    tools:context=".PatientRegister">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:inputType="text"
        android:text="Register"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/P_Name"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:cursorVisible="true"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#0C0E0E"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <EditText
        android:id="@+id/P_Email"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Name" />

    <EditText
        android:id="@+id/P_Address"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Current Address"
        android:inputType="text"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Email"
        app:layout_constraintVertical_bias="0.016" />

    <EditText
        android:id="@+id/P_Gender"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Gender"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Address"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/P_Number"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Phone Number"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Gender"
        app:layout_constraintVertical_bias="0.011" />

    <EditText
        android:id="@+id/P_Password"
        android:layout_width="300dp"
        android:layout_height="47dp"
        android:layout_marginBottom="116dp"
        android:cursorVisible="true"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Number"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/P_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/black"
        android:onClick="PRegister"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Password"
        app:layout_constraintVertical_bias="0.21" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account "
            android:layout_marginStart="110dp"
            android:layout_marginTop="680dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_Register"
            app:layout_constraintVertical_bias="0.811"
            android:layout_marginLeft="110dp" />

        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="680dp"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:text="LogIn"
            android:onClick="PLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_Register"
            android:layout_marginLeft="0dp" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_Register"
        app:layout_constraintVertical_bias="0.26" />


</androidx.constraintlayout.widget.ConstraintLayout>